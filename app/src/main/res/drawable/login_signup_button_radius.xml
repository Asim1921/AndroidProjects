<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Normal state -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#5dbea3" /> <!-- Set your desired background color -->
            <corners android:radius="15dp" /> <!-- Set your desired corner radius in dp -->
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffbd03" /> <!-- Set your desired background color for pressed state -->
            <corners android:radius="15dp" /> <!-- Set your desired corner radius in dp -->
        </shape>
    </item>

    <!-- Add more states if needed -->

</selector>
